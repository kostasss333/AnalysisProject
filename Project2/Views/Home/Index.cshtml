@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">

<div class="container">
    <br/>
    <div class="row justify-content-center">
        <img src="/Images/fullLogo.png" alt=""/>
    </div>
    <br/>
    <br/>
    <div class="row justify-content-center">

        <br>
        <div class="col-12 col-md-10 col-lg-8">
            <form class="card card-sm">
                <div class="card-body row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-search h4 text-body"></i>
                    </div>
                    <!--end of col-->
                    <div class="col">
                        <input class="form-control form-control-lg form-control-borderless" id="search" type="search" placeholder="Εισάγετε το κλειδί αναζήτησης">
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <button class="btn btn-lg btn-success" id="buttonz" type="button">Αναζήτηση δημοσιεύσεων</button>
                    </div>
                    <!--end of col-->
                </div>
            </form>
        </div>
        <!--end of col-->
    </div>
    <script>

        $("#buttonz").click(function() {
            var url = '@Url.Action("SearchResults", "Publishment")';
            var link = $('#search').val();
            window.location.href = url + '/?key=' + link;
        });

    </script>
</div>